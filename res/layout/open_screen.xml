<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.06" >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="53dp"
            android:gravity="center"
            android:text="Modding App!"
            android:textSize="22sp" />

        <Button
            android:id="@+id/createMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dip"
            android:text="Create new Mod" />

        <Button
            android:id="@+id/openMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_alignLeft="@+id/createMod"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:text="Open Existing Mod" />

        <Button
            android:id="@+id/deleteMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_below="@+id/openMod"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:text="Delete Mod" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deleteMod"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:text="@string/login_title" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:text="Temp Start Screen" />

    </RelativeLayout>

</LinearLayout>